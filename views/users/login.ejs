				<a href="/specialists/login">I'm a Practitioner</a>
				<form method="POST" class="form" action="/login">
					<div class="row">
						<div class="col-sm-6">
							<!-- <label for="email">Email</label> -->
							<input type="text" class="form-control" id="email" name="email" placeholder="Email" required="" oninput="buttonEnable();" autofocus="">
						</div> <!-- end .col-sm-6 -->
						<div class="col-sm-6">
							<!-- <label for="password">Password</label> -->
							<input type="password" class="form-control" id="password" name="password" placeholder="Password" required="" oninput="buttonEnable();">
						</div> <!-- end .col-sm-6 -->
