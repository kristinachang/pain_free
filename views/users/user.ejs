          <% dailies.forEach(function(daily) { %>
            <div style="margin-top: 10px;">
              <a href="/dailies/<%= daily.id %>"><%= daily.date %></a>
              <br>
              Part of Body: <%= daily.pain_area_1 %>
              <br>
              Scale: <%= daily.pain_scale %>
              <br>
              Notes: <%= daily.comment %>
            </div>
          <% }); %>       
