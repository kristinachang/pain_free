<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

	<title>Client Profile</title>

	<link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

	
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="/stylesheets/style.css">
	<link href='http://fonts.googleapis.com/css?family=Playfair+Display:400,700,400italic' rel='stylesheet' type='text/css'>
</head>
<body>

	<div class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>	
				<a class="navbar-brand" href="/">The Painfree App</a>	
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li class="active"><a href="/">Home</a></li>
					<li><a href="/about">About</a></li>
					<li><a href="/contact">Contact</a></li>
				</ul>
			</div>
		</div>
	</div>

	<div class="container">
		<h3>Welcome <%= user.email %> !</h3>
		<h2>Please complete your profile to continue:</h2>
	
		<h5>THIS IS THE PROFILE ID: <%= user.id %></h5>

		<div class="row">
  			<div class="col-xs-12 col-sm-6 col-md-8">
  				<form method="POST" action="/profile?_method=PUT" class="form-horizontal" role="form">
  					<div class="form-group">
  						<div class="col-xs-4">
  							<input type="text" name="user[first_name]" placeholder="First Name" value="<%=user.first_name %>" required>
  						</div>
  						<div class="col-xs-4">
  							<input type="text" name="user[last_name]" placeholder="Last Name" value="<%=user.last_name %>" required>
  						</div>
  					</div>

  					<div class="form-group">
  						<div class="col-xs-9">
  							<input type="text" name="user[address_1]" placeholder="Address" value="<%=user.address_1 %>" required>
  						</div>
  					</div>
  					<div class="form-group">
  						<div class="col-xs-9">
  							<input type="text" name="user[address_2]" placeholder="Address Line 2" value="<%=user.address_2 %>">
  						</div>
  					</div>

					<div class="form-group">
  						<div class="col-xs-4">
  							<input type="text" name="user[city]" placeholder="City" value="<%=user.city %>" required>
  						</div>
  						<div class="col-xs-4">
  							<input type="text" name="user[state]" placeholder="State" value="<%=user.state %>" required>
  						</div>
  						<div class="col-xs-4">
  							<input type="text" name="user[zip]" placeholder="Zip Code" value="<%=user.zip %>" required>
  						</div>
  					</div>
  					
  					<div class="form-group">
  						<div class="col-xs-4">
  							<input type="text" name="user[phone]" placeholder="Phone Number" value="<%=user.phone %>" required>
  						</div>
  						<div class="col-xs-4">
  							<input type="text" name="user[occupation]" placeholder="Occupation" value="<%=user.occupation %>" required>
  						</div>
  						<div class="col-xs-4">
  						</div>
  					</div>
  					
  					<div class="form-group">
  						<div class="col-xs-4">
  							<input type="text" name="user[age]" placeholder="Age" value="<%=user.age %>" required>
  						</div>
  						<div class="col-xs-4">
  							<input type="text" name="user[height]" placeholder="Height" value="<%=user.height %>" required>
  						</div>
  						<div class="col-xs-4">
  							<input type="text" name="user[weight]" placeholder="Weight" value="<%=user.weight %>" required>
  						</div>
  					</div>
  					
  					<div class="form-group">
  						<div class="col-xs-9">
  							<select name="user[SpecialistId]">
        						<option value="">My Specialist is...</option>
    								<% specialists.forEach(function(specialist) { %>
	          					<option value="<%= specialist.id %>"><%= specialist.first_name + ' ' + specialist.last_name %></option>
    								<% })  %>
      						</select>
  						</div>
  					</div>
 
  					<div class="form-group">
  						<div class="col-xs-9">
  							<button>Submit</button>
  						</div>
  					</div>	
  				</form>
  			</div>
		</div>
	</div>


	<div class="container">
		<div class="row">
			<div class="col-xs-6">
				<form method="POST" action="/logout?_method=DELETE">
					<button>Logout</button>
				</form>	
			</div>
		</div>
	</div>


	<div class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
		<div class="container">
			<div class="navbar-text pull-left">
				<p>Â© 2015 The Painfree App</p>
			</div>
