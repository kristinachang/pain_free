    <link type="text/css" rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <!-- <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Playfair+Display:400,700,400italic"> -->
  </head>

  <body>
    <!-- Navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="nav-container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button> 
          <a class="navbar-brand" href="/">The Painfree App</a> 
        </div> <!-- end .navbar-header -->
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div> <!-- end .navbar-collapse -->
      </div> <!-- end .nav-container -->
    </div> <!-- end .navbar -->

    <!-- Jumbotron -->
    <div class="container">
      <div class="jumbotron">
        <h2>Add A New Entry</h2>
        <form method="POST" class="form" action="/dailies">
          <div class="row">
            <div class="col-sm-offset-3 col-sm-6">
              <input type="text" name="daily[client_id]" style="display:none;" value="<%= UserId %>">
              <input type="text" class="form-control" id="entrydate" name="daily[date]" placeholder="Today's Date" required="" oninput="buttonEnable();" autofocus="">
            </div> <!-- end .col-sm-6 -->
          </div> <!-- end .row -->

          <div class="row">
            <div class="col-sm-6">
              <input type="text" class="form-control" id="bodypart" name="daily[pain_area_1]" placeholder="Part of the Body" required="" oninput="buttonEnable();">
            </div> <!-- end .col-sm-6 -->
            <div class="col-sm-6">
              <input type="text" class="form-control" id="painscale" name="daily[pain_scale]" placeholder="Rate on a Scale of 1 to 10" required="" oninput="buttonEnable();">
            </div> <!-- end .col-sm-6 -->
          </div> <!-- end .row -->

          <div class="row">
            <div class="col-sm-12">
              <textarea class="form-control" name="daily[comment]" placeholder="Notes"></textarea>
            </div> <!-- end .col-sm-12 -->
          </div> <!-- end .row -->
          <button class="button" type="submit" id="submitButton" disabled>Send & Save This Entry</button>
        </form> <!-- end form -->
        
        <div>
          <a href="/dailies">Cancel and Go Back to All Entries</a>
        </div>
        <br>
        <form method="POST" action="/logout?_method=DELETE">
          <button>Logout</button>
        </form>

      </div> <!-- end .jumbotron -->
    </div> <!-- end .container -->

    
    <!-- Footer -->
    <div class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
      <div class="nav-container">
        <div class="navbar-text pull-left">
          <p>Â© 2015 The Painfree App</p>
        </div> <!-- end .navbar-text pull-left -->
        <div class="navbar-text pull-right">
          <a href="#"><i class="fa fa-facebook-square fa-2x"></i></a>
          <a href="#"><i class="fa fa-twitter fa-2x"></i></a>
          <a href="#"><i class="fa fa-linkedin fa-2x"></i></a>
          <a href="#"><i class="fa fa-trello fa-2x"></i></a>
        </div> <!-- end .navbar-text pull-right -->
      </div> <!-- end .nav-container -->
    </div> <!-- end footer -->

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/stylesheets/bootstrap.min.js"></script>
    <script>    
      // Enable submit button when form completed
      function buttonEnable() {
        //console.log("buttonEnable was called");
        var entrydate = document.getElementById("entrydate").value;
        var bodypart = document.getElementById("bodypart").value;
        var painscale = document.getElementById("painscale").value;
        var buttonElement = document.getElementById("submitButton");
        
        if ((entrydate!="")&&(bodypart!="")&&(painscale!="")) {
          buttonElement.disabled = false;
        }
        else {
          buttonElement.disabled = true;
        };
      };
    </script>
  </body>
</html>