<div class="container">
    <div class="jumbotron text-left">
        <h3>Add A Daily Log</h3>
        <form method="post" action="/dailies" class="form-horizontal" role="form">
          <div class="form-group">
            <div class="col-xs-4">
          <input type="text" name="daily[client_id]" style="display:none;" value="<%= UserId %>">
          <input type="text" name="daily[date]" placeholder="Today's Date">
            </div>
          </div>
        
          <div class="form-group">
            <div class="col-xs-4">
          <input type="text" name="daily[pain_area_1]" placeholder="Pain Area 1">
            </div>
          </div>

          <div class="form-group">
            <div class="col-xs-4">
          <input type="text" name="daily[pain_scale]" placeholder="Pain Scale">
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-xs-4">
          <textarea name="daily[comment]" placeholder="comments"></textarea>
            </div>
          </div>

          <button>Save </button>
        </form>
